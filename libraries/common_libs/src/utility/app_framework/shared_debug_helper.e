class SHARED_DEBUG_HELPER

feature -- Debug

	dbh: DEBUG_HELPER
		once
			create Result
		end

	indent_str: STRING
		do
			Result := dbh.indent_str_src.substring (1, dbh.indent_count)
		end

	inc_indent
		do
			dbh.inc_indent
		end

	dec_indent
		do
			dbh.dec_indent
		end

end


